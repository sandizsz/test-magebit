    "jest-junit": "12.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "tailwindcss": "^3.3.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
